                                //Validate if all data in form is correct! Before showing success
                                $('#msg').after(SuccessContent);
                                SuccessContent = ' ';
                               
                                //$('#msg').after(IncorrectContent);
                                //IncorrectContent = ' ';
                            }
                        </script>
