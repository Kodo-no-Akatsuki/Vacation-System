                        <input id="fechasHidden" name="fechasHidden" type="hidden" value="@jsonFechas"/> @*Cambiar a Hidden*@

                        <script type="text/javascript">
                            $(function() {
                                $('input[name="daterange"]').daterangepicker({
                                    locale: {
                                        applyLabel: 'Aplicar',
                                        cancelLabel: 'Cancelar',
                                        fromLabel: "Salida",
                                        toLabel: "Regreso",
                                        "daysOfWeek": ["Dom", "Lu", "Mar", "Mie", "Jue", "Vie", "Sab"],
                                        "monthNames": [
                                            "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto",
                                            "Septiembre", "Octubre", "Noviembre", "Diciembre"
                                        ]
                                    }

                                });

                            });

                            $("#availability").click(function() {
                                //Check if date is available logic here!
                                var datevalues = document.getElementById('fecha').value;
                                var res = datevalues.split(" - ");
                                var invaliddates = JSON.parse(document.getElementById('fechasHidden').value, new Date());
                                var daysAccepted = false;
                                var range = daysInBetween(new Date(res[0]), new Date(res[1]));

                                document.getElementById('fsalida').value = res[0];
                                document.getElementById('fregreso').value = res[1];
                                document.getElementById('diassolic').value = range;
                                console.log(range);

                                if (range > document.getElementById('diasportomar').value) {
                                    alert("No puede tomar mas dias de los que le quedan!");
                                    return;
                                }

                                for (var i = 0; i < invaliddates.length; i++) {
                                    var date = invaliddates[i].replace("T00:00:00", "");
                                    var y = date.split('-');
                                    var dateInvalid = new Date(y[0], y[1] - 1, y[2]);

                                    daysAccepted = checkDates(dateInvalid, res[0], res[1]);
                                    if (!daysAccepted)
                                        break;
                                }

                                if (daysAccepted)
                                    alert("Los dias seleccionados estan disponibles");

                            });
                        </script>

                        <script type="text/javascript">
                            function daysInBetween(firstDate, secondDate) {
                                // The number of milliseconds in one day
                                var oneDay = 1000 * 60 * 60 * 24;

                                // Convert both dates to milliseconds
                                var date1Ms = firstDate.getTime();
                                var date2Ms = secondDate.getTime();

                                // Calculate the difference in milliseconds
                                var differenceMs = Math.abs(date1Ms - date2Ms);

                                // Convert back to days and return
                                return Math.round(differenceMs / oneDay);
                            }

                        </script>

                        <script type="text/javascript">
                            function checkDates(invalidDate, startDate, endDate) {
                                startDate = startDate.split('/');
                                endDate = endDate.split('/');
                                var invalid = invalidDate;
                                var begin = new Date(startDate[2], startDate[0] - 1, startDate[1]);
                                var end = new Date(endDate[2], endDate[0] - 1, endDate[1]);

                                if (new Date().getFullYear() !== begin.getFullYear()) {
                                    alert("Solo puede escoger dias del año vigente!");
                                    return false;
                                    //Analizar mejor esta condicion
                                }

                                else if (begin.getDate() < new Date().getDate() || begin.getMonth() < new Date().getMonth()) {
                                    alert("No puede seleccionar dias del pasado");
                                    return false;
                                }

                                else if (invalid.getDate() < begin.getDate()) {
                                    return true;
                                }

                                else if (invalid.getMonth() < begin.getMonth()) {
                                    return true;
                                }

                                else if (invalid.getMonth() < end.getMonth()) {
                                    alert("La fecha " + (invalid.getMonth() + 1).toString() + '/' + invalid.getDate().toString() + '/'
                                            + invalid.getFullYear() + " no esta disponible");

                                    return false;
                                }

                                else if (invalid.getFullYear() === begin.getFullYear()) {
                                    if (invalid.getDate() >= begin.getDate() && invalid.getDate() <= end.getDate()) {
                                        console.log("entro");
                                        alert("La fecha " + (invalid.getMonth()+1).toString() + '/' + invalid.getDate().toString() + '/'
                                            + invalid.getFullYear() + " no esta disponible");

                                        return false;
                                    }
                                }

                                return true;
                            }
                        </script>

