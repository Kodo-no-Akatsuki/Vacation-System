                                    <div class="col-md-5 col-sm-6 col-xs-12">
                                        <input value="@Model.User.PrimerNombre @Model.User.PrimerApellido" class="form-control col-md-7 col-xs-12" type="text" readonly />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        <input style="margin: 0 auto; background: #193b69;" type="submit" class="btn btn-primary pull-right" name="confirm" value="Enviar" />

                                    </div>
                                </div>
                            }
                            @*</form>*@
                            <div id="msg"></div>

                        </div>
                        <!-- End SmartWizard Content -->
                    </div>
                }

                else
                {
                    <p>Su solicitud esta en espera de ser revisada.</p>
                }

            </div>
        </div>
    </div>
</div>
